 <section class= "hero py-2">
    <div class="container mx-auto flex items-center justify-between">
        <div>
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-6xl font-bold">Don't wait !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
        </div>
        <div>
            <img src="/img/pizza.jpg">
        </div>
     </div>
</section>
<section class="menu container mx-auto py-2">
        <h1 class="text-xl font-bold mb-4">All Pizzas</h1>
        <div class="grid grid-cols-4 col-gap-6 row-gao-2">
            <% pizzas.forEach(function(pizza) {%>
                <div class="w-64">
                <img class="h-40 mb-2 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-2 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
                    <div class="flex items-center justify-around">
                        <span class="font-bold text-lg">$<%= pizza.price%></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-2">Add</span>
                        </button>
                    </div>
                </div>
            </div>
       <% })%>
        </div>
</section>

